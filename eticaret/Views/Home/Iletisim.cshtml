@using EntityLayer.Concrete
@model List<Iletisim>

@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="main" style="background-color:#fff">
    <section class="page-header page-header-modern bg-color-light-scale-1 page-header-md ">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <div class="row">
                        <div class="col-md-12 align-self-center p-static order-2 text-center">
                            <div class="overflow-hidden pb-2">
                                <h1 class="text-dark font-weight-bold text-9 appear-animation" data-appear-animation="maskUp" data-appear-animation-delay="100">İletişim</h1>
                            </div>
                        </div>
                        <div class="col-md-12 align-self-center order-1">
                            <ul class="breadcrumb d-block text-center appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="300">
                                <li class="active">Ana Sayfa</li>
                                <li class="active">İletişim</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container pt-3 pb-5" style="margin-right: 100px;">
        <div class="row">
            <div class="col-sm">
                <h4 class="pt-5" style="color: #0088cc">Genel <strong style="color: #0088cc">Müdürlük</strong></h4>
                <ul class="list list-icons list-icons-style-3 mt-2">
                    <li>
                        <i class="fas fa-map-marker-alt top-6"></i><strong>Adres: </strong>@ViewBag.Adres
                    </li>
                    <li><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong>@ViewBag.Phone</li>
                    <li><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Eposta">@ViewBag.Eposta</a></li>
                </ul>
            </div>
            <div class="col-sm">
                <h4 class="pt-5" style="color: #0088cc">Firma <strong style="color: #0088cc">İletişim</strong></h4>
                <ul class="list list-icons list-icons-style-3 mt-2">
                    <li><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong>@ViewBag.Phone</li>
                    <li><i class="fas fa-phone top-6"></i> <strong>Çağrı Telefonu: </strong><a href="tel:@ViewBag.PhoneCagri">@ViewBag.PhoneCagri</a></li>
                    <li><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Eposta">@ViewBag.Eposta</a></li>
                </ul>
            </div>
            <div class="col-sm">
                <h4 class="pt-5" style="color: #0088cc">Çalışma <strong style="color: #0088cc">Saatleri</strong></h4>
                <ul class="list list-icons list-dark mt-2">
                    <li><i class="far fa-clock top-6"></i>@ViewBag.Saatler</li>

                </ul>
            </div>
        </div>
    </div>
</div>