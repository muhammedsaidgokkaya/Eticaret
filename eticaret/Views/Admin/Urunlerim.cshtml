@using EntityLayer.Concrete
@model List<Urun>

@{
    ViewData["Title"] = "Urunlerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <section class="body">
        <div>
            <section role="main" class="content-body content-body-modern mt-0">
                <div class="row">
                    <div class="col">
                        <section class="card card-modern card-big-info">
                            <div class="card-body">
                                <div class="row">
                                    <div class="datatables-header-footer-wrapper mt-2">
                                        <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list" style="min-width: 550px;">
                                            <thead>
                                                <tr>
                                                    <th hidden>ID</th>
                                                    <th>Ürün Adı</th>
                                                    <th>Fiyat</th>
                                                    <th>Açıklama Başlığı</th>
                                                    <th>Açıklama</th>
                                                    <th>Adet</th>
                                                    <th>Resim</th>
                                                    <th>Kategori Ad</th>
                                                    <th>Düzenle</th>
                                                    <th>Sil</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var i in Model)
                                                {
                                                    <tr>
                                                        <td hidden>@i.UrunId</td>
                                                        <td>@i.Name</td>
                                                        <td>@i.Price</td>
                                                        <td>@i.DescriptionName</td>
                                                        <td>@i.Description</td>
                                                        <td>@i.Adet</td>
                                                        <td><img src="~/Resimler/UrunResmi/@i.ResimYol" style="width:20%;" /></td>
                                                        <td>@i.CategoryCategoryBaslik</td>
                                                        <td><a href="/Admin/UrunDuzenle/@i.UrunId" class="edit-button btn btn-info btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">Düzenle</a></td>
                                                        <td><a href="/Admin/UrunSil/@i.UrunId" class="delete-button btn btn-danger btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">Sil</a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <hr class="solid mt-5 opacity-4">
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
