@using eticaret.Models
@model IletisimBilgileriDto

@{
    ViewData["Title"] = "IletisimBilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <!-- start: sidebar -->
    <!-- end: sidebar -->
    <section role="main" class="content-body content-body-modern mt-0">
        <header class="page-header page-header-left-inline-breadcrumb">
            <h2 class="font-weight-bold text-6">İletişim Bilgilerim Düzenle</h2>
        </header>

        <!-- start: page -->
        <form method="post" >

            <div class="row">
                <div class="col">
                    <section class="card card-modern card-big-info">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12-9 col-xl-13-7">
                                    <div class="row">
                                        <div class="card">
                                            <div class="card-body">
                                                <div hidden class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">id</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Id" value="@Model.Id" required />
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Tel</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Phone" value="@Model.Phone" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Çağrı Merkezi</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="PhoneCagri" value="@Model.PhoneCagri" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Adres</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Adres" value="@Model.Adres" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">E-posta</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="email" class="form-control form-control-modern" name="Eposta" value="@Model.Eposta" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end pt-2 mt-1 mb-0">Çalışma Saatleri</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Saatler" value="@Model.Saatler" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Facebook Linki</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Facebook" value="@Model.Facebook" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Instagram Linki</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Instagram" value="@Model.Instagram" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">Twitter Linki</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="Twitter" value="@Model.Twitter" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row align-items-center mb-3">
                                                    <label class="col-lg-4 col-xl-2 control-label text-lg-end mb-0">LinkedIn Linki</label>
                                                    <div class="col-lg-11 col-xl-10">
                                                        <input type="text" class="form-control form-control-modern" name="LinkedIn" value="@Model.LinkedIn" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="row action-buttons">
                <div class="col-12 col-md-auto">
                    <button type="submit" class="submit-button btn btn-primary btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1" data-loading-text="Loading...">
                        Kaydet
                    </button>
                </div>
            </div>
        </form>
    </section>
</div>