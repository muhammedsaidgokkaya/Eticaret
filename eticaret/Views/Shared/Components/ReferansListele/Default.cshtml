@using EntityLayer.Concrete
@model List<Referanslar>

<div class="datatables-header-footer-wrapper mt-2">
    <div class="datatable-header">
        <div class="row align-items-center mb-3">
            <div class="col-12 col-lg-auto mb-3 mb-lg-0">
                <button id="hideshow" class="btn btn-primary btn-md font-weight-semibold btn-py-2 px-4">+ Referans Ekle</button>
            </div>
        </div>
    </div>
    <table class="table table-ecommerce-simple table-striped mb-0" id="datatable-ecommerce-list" style="min-width: 550px;">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Referans Bilgileri</th>
                <th>Resim</th>
                <th>Düzenle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td hidden>@i.Id</td>
                    <td>@i.Baslik</td>
                    <td>@i.Description</td>
                    <td>@i.ReferansBilgileri</td>
                    <td><img src="~/Resimler/ReferansResim/@i.ResimYol" style="width:20%;" /></td>
                    <td><a href="/Admin/ReferansDuzenle/@i.Id" class="edit-button btn btn-info btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">Düzenle</a></td>
                    <td><a href="/Admin/ReferansSil/@i.Id" class="delete-button btn btn-danger btn-px-4 py-3 d-flex align-items-center font-weight-semibold line-height-1">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="solid mt-5 opacity-4">
</div>